
{
  "env": {
      "browser": true,
      "es2021": true
  },
  "extends": [
      "trybe-frontend"
  ],
  "overrides": [
    {
        "files": ["*.tsx"],
        "rules": {
            "no-unused-vars": "off",
            "import/no-unresolved": "off",
            "import/extensions": "off"
        }
    }
  ],
  "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
  },
  "plugins": [
      "react"
  ],
  "rules": {
        "react/jsx-no-constructed-context-values": 0,
      "indent": [
          "error",
          2
      ],
      "linebreak-style": [
          "error",
          "unix"
      ],
      "quotes": [
          "error",
          "single"
      ],
      "semi": [
          "error",
          "always"
      ]
      
  }
}